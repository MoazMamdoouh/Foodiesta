<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/custom_dialog_lottie_correct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4dp"
        app:lottie_rawRes="@raw/correct_animation"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        />
    <TextView
        android:id="@+id/custom_dialog_tv_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/custom_dialog_lottie_correct"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="32sp"
        />
    <TextView
        android:id="@+id/custom_dialog_tv_requirement"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_margin="8dp"
        android:text="@string/you_need_to_check_email_for_verfication_and_log_in"
        app:layout_constraintTop_toBottomOf="@id/custom_dialog_tv_action"
        app:layout_constraintStart_toEndOf="@id/custom_dialog_lottie_correct"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>