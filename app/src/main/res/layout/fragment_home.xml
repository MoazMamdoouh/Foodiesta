<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dark_wall"
    tools:context=".Home.HomeFragment"
    >
    <androidx.constraintlayout.widget.Group
        android:id="@+id/home_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="home_tv_welcome , home_tv_user_name , home_iv_user_profile"
      />
    <TextView
        android:id="@+id/home_tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome "
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="@font/emblema_one_regular"
      />
    <TextView
        android:id="@+id/home_tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chef_name"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/emblema_one_regular"
        app:layout_constraintStart_toEndOf="@id/home_tv_welcome"
      />
    <ImageView
        android:id="@+id/home_iv_user_profile"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/person_icon"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
      />

  <androidx.cardview.widget.CardView
      android:id="@+id/home_card_daily_meal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/home_iv_user_profile"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="8dp"
      app:cardElevation="10dp"
      app:cardCornerRadius="16dp"
    >
    <ImageView
        android:id="@+id/home_iv_daily_meal_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/food"
        android:scaleType="fitXY"
      />
  </androidx.cardview.widget.CardView>
  <TextView
      android:id="@+id/home_tv_sentences"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/get_food"
      android:textColor="@color/white"
      app:layout_constraintTop_toBottomOf="@id/home_card_daily_meal"
      android:layout_margin="8dp"
      android:textStyle="bold"
      android:textSize="20sp"
    />
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/home_rv_meals"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/home_tv_sentences"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      tools:listitem="@layout/row_home_meals"
      />
</androidx.constraintlayout.widget.ConstraintLayout>