<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fools_gold"
    tools:context=".Presentation.Profile.ProfileFragment">

    <FrameLayout
        android:id="@+id/profile_frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        >
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_iv_profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/chef_logo"
        app:shapeAppearanceOverlay="@style/CircularImageView"
        />
        <ImageView
            android:id="@+id/profile_iv_plus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:src="@drawable/plus_icon"
            android:background="@drawable/rounded_background"
            />
    </FrameLayout>
  <TextView
      android:id="@+id/profile_tv_chef_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/profile_frame_layout"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="32dp"
      android:text="@string/chef_name"
      android:textSize="32sp"
      android:textStyle="italic"
      />
    <TextView
        android:id="@+id/profile_tv_chef_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_tv_chef_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:text="@string/chef_email"
        android:textSize="20sp"
        android:textStyle="italic"
        />
</androidx.constraintlayout.widget.ConstraintLayout>