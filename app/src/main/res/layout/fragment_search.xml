<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Presentation.Serach.SearchFragment">

    <EditText
        android:id="@+id/search_et_search_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/search_bar_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/search_here"
        android:drawableStart="@drawable/search_icon"
        android:textColorHint="@color/white"
        />
        <com.google.android.material.chip.Chip
            android:id="@+id/search_chip_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ingredient"
            android:backgroundTint="@color/light_blue"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            app:layout_constraintTop_toBottomOf="@id/search_et_search_bar"
            android:layout_margin="8dp"
            android:elevation="12dp"
            app:layout_constraintStart_toStartOf="@id/search_et_search_bar"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/search_chip_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Country"
            android:backgroundTint="@color/light_blue"
            android:textColor="@color/white"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:layout_constraintTop_toBottomOf="@id/search_et_search_bar"
            app:layout_constraintStart_toEndOf="@id/search_chip_ingredient"
            app:layout_constraintEnd_toStartOf="@id/search_chip_category"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:elevation="12dp"
            />
        <com.google.android.material.chip.Chip
            android:id="@+id/search_chip_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category"
            android:textColor="@color/white"
            android:backgroundTint="@color/light_blue"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            app:layout_constraintTop_toBottomOf="@id/search_et_search_bar"
            app:layout_constraintStart_toEndOf="@id/search_chip_country"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:elevation="12dp"
            />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_rv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_chip_ingredient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        tools:listitem="@layout/row_search_show_list"
        />

</androidx.constraintlayout.widget.ConstraintLayout>